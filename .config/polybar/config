[bar/main]
height = 20
width = 100%
tray-position = right
radius = .2

fixed-center = true

monitor = LVDS1
override-redirect = true
wm-restack = i3

modules-left = i3
modules-center = time
modules-right = ethernet wifi battery 
separator = |

font-0 = UbuntuMono-Bold:size=12
font-1 = FontAwesome:pixelsize=12
line-size = 2

module-margin-right = 2
module-margin-left = 2


[module/i3]
type = internal/i3
enable-click = true
enable-scroll = true
format = <label-state> <label-mode>
pin-workspaces = false
index-sort = true

label-focused = %name%
label-focused-padding = 1
label-focused-background = ${xrdb:color1:#222}
label-focused-underline = ${xrdb:color5:#222}

label-unfocused = %name%
label-unfocused-padding = 1

label-visible = %name%
label-visible-padding = 1


[module/time]
type = internal/date
interval = 5
time = %H:%M:%S
label = %time%


[module/battery]
type = internal/battery
battery = BAT0
label-discharging = [%percentage%%]
label-charging = [⚡%percentage%%]

[module/wifi]
type = internal/network
interface = ${env:WLAN}
format-connected = <label-connected>

label-connected =  %local_ip%
label-connected-foreground = ${xrdb:color5:#222}

[module/ethernet]
type = internal/network
interface = ${env:ETH}
format-connected = <label-connected>

label-connected =  %local_ip%
label-connected-foreground = ${xrdb:color8:#222}
